<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:ClockAlarm"
       x:Class="ClockAlarm.AppShell"
       BackgroundColor="Black">
    <!-- Flyout Menu -->
    <Shell.FlyoutHeader>
        <Label Text="WakeUP Alarm App"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               TextColor="White"
               BackgroundColor="Black" />
    </Shell.FlyoutHeader>

    <!-- Define main content -->
    <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" />

    <Shell.ToolbarItems>
        <ToolbarItem Text="Settings" Order="Primary">
            <!-- Add command or navigation here if needed -->
        </ToolbarItem>
    </Shell.ToolbarItems>
</Shell>
